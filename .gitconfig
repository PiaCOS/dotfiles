[user]
	name = PiaCOS
	email = pia.cosneau@gmail.com

[core]
	editor = helix

[alias]
	cp = cherry-pick

	# git branch --show-current should also work
	pwd = rev-parse --abbrev-ref HEAD

	head5 = log --oneline -n 5
	head10 = log --oneline -n 10
	head20 = log --oneline -n 20

	diffhead = diff HEAD~ HEAD

	tree1 = log --graph --oneline --decorate --all
	log1 = log --graph --pretty=oneline --abbrev-commit

[credential]
	helper = !/usr/bin/gh auth git-credential
	# helper = !/home/odoo/.nix-profile/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential

[init]
	defaultbranch = main

[merge]
	conflictStyle = zdiff3
